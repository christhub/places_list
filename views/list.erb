<div class="places">
  <ul class="places-list" style="list-style-type:none">
    <% if @all_places == nil %>
      <%= "You haven't added any places yet." %>
    <% else %>
      <% @all_places.each do |place| %>
      <li><%= place.description %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<div class="form-group-2">
  <form class="column col-md-6" action = "/" method = "get">
    <button class="btn-primary btn-md"  type = "submit"> Add Another </button>
  </form>
  <form  class="column col-md-6" action = "/clear" method = "post">
   <button class="btn-primary btn-md"  type = "submit"> Clear </button>
  </form>
</div>
